{% schema %}
{
  "name": "Hotspot Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "range",
          "id": "position_x",
          "label": "Position X (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "position_y",
          "label": "Position Y (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hotspot Image",
      "blocks": [
        {
          "type": "hotspot"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="hotspot-container">
  {% if section.settings.background_image != blank %}
    <img src="{{ section.settings.background_image | img_url: 'master' }}" alt="Hotspot Background">
  {% else %}
    <div class="placeholder">Upload an image in the Theme Editor</div>
  {% endif %}

  {% for block in section.blocks %}
    {% if block.type == "hotspot" %}
      <div class="hotspot"
           style="top: {{ block.settings.position_y }}%; left: {{ block.settings.position_x }}%;">
        <span class="pulse"></span>
        <div class="tooltip">
          <a href="{{ block.settings.product.url }}">
            {{ block.settings.product.title }}
          </a>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
.hotspot-container {
  position: relative;
  width: 100%;
  max-width: 100%;
}

.hotspot-container img {
  width: 100%;
  display: block;
}

.hotspot {
  position: absolute;
  width: 15px;
  height: 15px;
  background-color: red;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  cursor: pointer;
  z-index: 10;
}

.hotspot .pulse {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 0, 0, 0.5);
  border-radius: 50%;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(2.5); opacity: 0; }
}

.hotspot .tooltip {
  position: absolute;
  top: -30px;
  left: 50%;
  transform: translateX(-50%);
  background-color: black;
  color: white;
  padding: 5px 10px;
  border-radius: 5px;
  font-size: 14px;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.hotspot:hover .tooltip {
  opacity: 1;
}

.placeholder {
  text-align: center;
  padding: 50px;
  background: #f7f7f7;
  color: #777;
}
</style>
